package JavaConcepts;

public class Interfaces_ShapeDemo_Circle implements Interfaces_ShapeDemo
{
	private double radius;

    public Interfaces_ShapeDemo_Circle(double radius) {
        this.radius = radius;
    }

    @Override
    public double calculateArea() {
        return Math.PI * radius * radius; // Formula for area of a circle
    }

    @Override
    public void shareArea() {
        System.out.println("The area of the circle is: " + calculateArea());
    }

}
